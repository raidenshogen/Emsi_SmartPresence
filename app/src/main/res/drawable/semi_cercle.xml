<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lighter Teal Semi-Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary" />
            <size
                android:width="150dp"
                android:height="150dp" />
            <padding
                android:left="100dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="75dp" />
        </shape>
    </item>

    <!-- Dark Teal Semi-Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimaryDark" />
            <size
                android:width="150dp"
                android:height="150dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="50dp"
                android:bottom="75dp" />
        </shape>
    </item>
</layer-list>